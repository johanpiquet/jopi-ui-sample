{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",

    "rewriteRelativeImportExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "verbatimModuleSyntax": true,
    "allowJs": false,

    "allowSyntheticDefaultImports": true,
    "types": ["@jopi-loader/types", "@types/bun"],

    "baseUrl": ".",

    "paths": {
      "@/*": ["./src/*"],
      "@/uiLib/*": ["./src/uiLib/*"],
      "@/ui/*": ["./src/uiComponents/ui/*"],
      "@/uiComponents/*": ["./src/uiComponents/*"]
    }
  },

  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/.turbo",
    "**/.cache"
  ]
}