{
  "name": "jopi-ui-sample",
  "version": "0.0.1",
  "license": "MIT",
  "homepage": "https://github.com/johanpiquet/jopi-ui-sample",
  "keywords": ["express.js", "nextjs", "react", "react-ssr", "react-hydrate"],
  "author": "Johan PIQUET",
  "description": "Sample UI for Jopi Rewrite",

  "engines": {"bun": "^1.2.18", "node": ">=22.18.0"},
  "type": "module",

  "scripts": {
    "build": "rm -rf ./dist; npx tsc",
    "clean": "rm -rf ./dist; rm -rf .turbo; rm tsconfig.tsbuildinfo",
    "tsc": "npx tsc",
    "devNodeUI": "JOPI_LOG=0 npx jopin dist/index.js",
    "devBunUI": "bunx jopib src/index.ts"
  },

  "devDependencies": {
    "@types/bun": "^1.2.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "jopi-rewrite": "workspace:^"
  },

  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "jopi": {
    "webSiteUrl": "http://127.0.0.1:3000",
    "inlineMaxSize_ko": 10
  }
}
